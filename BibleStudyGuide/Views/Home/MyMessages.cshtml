@model IEnumerable<BibleStudyGuide.Models.Message>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Studies already done</h2>


<ul class="breadcrumb" style="width:15%">
    <li>@Html.ActionLink("Verses Categories >>", "MyStudy2")</li>
</ul>
<br />
<br />

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th style="text-align:center; width:5%;">
                Author Name
            </th>
            <th style="text-align:center; width:5%;">
                Book Name
            </th>
            <th style="text-align:center; width:5%;">
                Chapter Number
            </th>
            <th style="text-align:center; width:45%;">
                Message
            </th>
            <th style="text-align:center; width:5%;">
                Date
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th style="width:10%; text-align:center;">Actions</th>
            }
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center; width:5%;">
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td style="text-align:center; width:5%;">
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td style="text-align:center; width:5%;">
                @Html.DisplayFor(modelItem => item.ChapterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message1)
            </td>
            <td style="text-align:center; width:5%;">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td style="width:10%; text-align:center;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MessageID }) |
                    @Html.ActionLink("Delete", "DeleteMessage", new { id = item.MessageID })
                </td>
            }
        </tr>
    }
</table>

